{
  "name": "ds-md-viewer",
  "version": "1.0.0",
  "description": "A lightweight Markdown file viewer for Windows",
  "main": "main.js",
  "scripts": {
    "start": "webpack && electron .",
    "build": "webpack",
    "electron": "electron .",
    "dev": "webpack && electron .",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder"
  },
  "keywords": [
    "markdown",
    "viewer",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "electron-store": "^8.2.0",
    "font-list": "^2.0.1",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-markdown": "^8.0.7",
    "react-syntax-highlighter": "^16.1.0",
    "remark-gfm": "^3.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "babel-loader": "^10.0.0",
    "css-loader": "^7.1.2",
    "electron": "^39.2.5",
    "electron-builder": "^26.0.12",
    "html-webpack-plugin": "^5.6.5",
    "style-loader": "^4.0.0",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1"
  },
  "build": {
    "appId": "com.dsodo.mdviewer",
    "productName": "DS MD Viewer",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "assets/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "signAndEditExecutable": false,
      "fileAssociations": [
        {
          "ext": "md",
          "name": "Markdown File",
          "description": "Markdown Document",
          "role": "Viewer"
        },
        {
          "ext": "markdown",
          "name": "Markdown File",
          "description": "Markdown Document",
          "role": "Viewer"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
